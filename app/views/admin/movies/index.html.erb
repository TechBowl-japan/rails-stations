<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Admin Movies List</title>
	</head>

	<body>

		<table>
			<tr>
				<th>ID</th>
				<th>タイトル</th>
				<th>公開年</th>
				<th>概要</th>
				<th>画像URL</th>
				<th>上映中</th>
				<th>登録日時</th>
				<th>更新日時</th>
			</tr>
			<% @movies.each do |movie| %>
				<tr>
					<th><%= movie.id %></th>
					<th><%= movie.name %></th>
					<th><%= movie.year %></th>
					<th><%= movie.description %></th>
					<th><a><%= link_to movie.image_url, movie.image_url %></a></th>
					<th>
						<%=
							movie.is_showing ? "上映中" : "上映予定"
						%>
					</th>
					<th><%= movie.created_at %></th>
					<th><%= movie.updated_at %></th>
				<tr>
			<% end %>
		</table>
	</body>
</html>
