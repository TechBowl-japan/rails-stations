<section class='admin'>
  <div class='header'>
    <h1>TechTrain Cinema.</h1>
  </div>
  <div class='leftSidebar'>
    <div class="menu">
      <li><a href="#">Movies</a></li>
      <li><a href="#">Showtime</a></li>
      <li><a href="#">Reservations</a></li>
    </div>
  </div>
  <div class='body'>
    <table>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>公開年</th>
        <th>上映中</th>
        <th>概要</th>
        <th>画像URL</th>
        <th>登録日時</th>
        <th>更新日時</th>
        <th></th>
      </tr>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.id %></td>
          <td><%= movie.name %></td>
          <td><%= movie.year %></td>
          <%  if movie.is_showing %>
            <td>上映中</td>
          <% else %>
            <td>上映終了</td>
          <% end %>
          <td><%= movie.description %></td>
          <td><%= link_to("画像", "#{movie.image_url}") %></td>
          <td><img src="<%={movie.image_url}%>"></td>
          <td><%= movie.created_at %></td>
          <td><%= movie.updated_at %></td>
          <td></td>
        </tr>
      <% end %>
    </table>
  </div>
</section>

