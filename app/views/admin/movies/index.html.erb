<h1>Movies</h1>
<%# <div class="table_index"> %>
<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>　ID　</th>
      <th>　映画タイトル　</th>
      <th>　公開年　</th>
      <th>　上映中か　</th>
      <th>　画像URL　</th>
      <th>　概要　</th>
      <th>　作成日時　</th>
      <th>　更新日時　</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to "#{movie.id}", "movies/#{movie.id}/edit" %></td>
        <td><%= movie.name %></td>
        <td><%= movie.year %></td>
        <td><%= movie.is_showing ? "上映中" : "公開予定" %>
        <td><%= image_tag movie.image_url, :size => '50x50' %></td>
        <td><%= movie.description %></td>
        <td><%= movie.created_at %></td>
        <td><%= movie.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%# </div> %>