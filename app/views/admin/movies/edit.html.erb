<div class="form-container">

<%= alert %>

<%= render 'error_form', locals: { movie: @movie } %>

    <%= form_with scope: :movie, url: admin_movie_path, method: :put, local: true do |form| %>
      <div class="input-group mb-3 border">
        <%= form.label "タイトル", class: "input-group-text" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="input-group mb-3 border">
        <%= form.label "公開年", class: "input-group-text mr-1" %>
        <%= form.text_field :year, class: 'form-control' %>
      </div>
      <div class="input-group mb-3 border">
        <%= form.label "上映中", class: "input-group-text" %>
        <%= form.select :is_showing, { "上映中": true, "上映予定": false }, class: 'form-control' %></td>

      </div>
      <div class="input-group mb-3 border">
        <%= form.label "概要", class: "input-group-text" %>
        <%= form.text_area :description, class: 'form-control' %></td>
      </div>
      <div class="input-group mb-3 border">
        <%= form.label "画像URL", class: "input-group-text" %>
        <%= form.text_field :image_url, class: 'form-control' %></td>
      </div>

      <div class="btn-group">
        <div class="submit-btn">
            <%= form.submit "更新", class: 'btn btn-primary' %>
        </div>
        <div class="delete-btn">
          <%= link_to "削除", admin_movie_path, method: :delete, data: { confirm: "【確認】投稿を削除してもよろしいですか？" }, class: 'btn btn-danger'%>
        </div>
      </div>
    <% end %>
</div>