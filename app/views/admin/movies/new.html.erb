<h1>Movie Create</h1>
<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_with(model: @movie, url: "/admin/movies", local: true) do |f| %>
  <%# <%= render 'shared/error_messages' %> 
  <%= f.label :name, '映画タイトル' %> <%= f.text_field :name %></br>
  <%= f.label :year, '公開年' %> <%= f.text_field :year %></br>
  <%= f.label :is_showing, '上映中か'%> <%= f.check_box :is_showing %></br>
  <%= f.label :description, '概要' %> <%= f.text_area :description %></br>
  <%= f.label :image_url, '画像URL' %> <%= f.text_field :image_url%></br>
  <%= f.submit "save" %>
<% end %>
</div>
</div>

