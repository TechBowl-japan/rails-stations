<!DOCTYPE html>
<html>
<div class= "row">

    <% @movies.each do |movie| %>
    <div class="col-md-3">
        <div class="thumbnail">
        <img src="<movie.image_url %>"><%= movie.image_url %>
            <div class= "caption">
            <h3 class="name"><%= movie.name%></h3>
            <p class="year"><%= movie.year%></p>
            <p class="description"><%= movie.description%></p>
            <p class="is_showing"><%= movie.is_showing%></p>
            </div>
        </div>
    </div>
    <% end%>
</div>
</html>