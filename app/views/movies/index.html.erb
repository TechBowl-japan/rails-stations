<h1>Movies</h1>
</br>
<div class="index_header">
  <%= search_form_for @search, url: movies_path do |f| %>
    <div class="index_radio_buttons">
      <!--forに指定しているのは、f.radio_buttonのid属性-->
      <%= f.radio_button :is_showing_eq, ''%>
      <%= f.radio_button :is_showing_eq, 1%>
      <%= f.radio_button :is_showing_eq, 0%>
      <label class="index_label" id="label3" for="q_is_showing_eq_">
        すべて
      </label>
      <label class="index_label" id="label1" for="q_is_showing_eq_1">
        上映中
      </label>
      <label class="index_label" id="label2" for="q_is_showing_eq_0">
        公開予定
      </label>
    </div>
    <div class="index_buttons">
      <div class="index_search_fields">
        <%= f.search_field :name_or_description_cont, class:"index_search_field", placeholder: "キーワードで検索する" %>
      </div>
      <div class="index_search_button">
        <%= button_tag :type => "submit", :class => "index_button_tag" do %>
          <i class="fas fa-search fa-2x index_search_icon"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="index_container_parent">
  <div class="index_container">
    <% @movies.each do |movie| %>
        <div class="index_card" style="width: 200px;">
          <%= link_to image_tag(movie.image_url, alt: "movie tag", :size => '200x150')%>
          <h5><%= movie.name %></h5>
            <div class="index_button"> 
              <%= link_to movie_path(movie) do %><button type="button" class="reserve_detail_button">予約/詳細</button><% end %>
            </div>
        </div>
    <% end %>
  </div>
</div>

<%= will_paginate %>
