<section id="about">
	<div class="inner">
		<div class='indexGrid'>
        <table>
          <tr>
            <th>ID</th>
            <th>タイトル</th>
            <th>公開年</th>
            <th>上映中</th>
            <th>概要</th>
            <th>画像URL</th>
            <th>登録日時</th>
            <th>更新日時</th>
            <th>編集/削除</th>
          </tr>
          <% @movies.each do |movie| %>
          <tr>
            <td><a href="/admin/movies/<%= movie.id %>/edit"><%= movie.id %> </a> </td>
            <td><%= movie.name %></td>
            <td><%= movie.year %></td>
            <%  if movie.is_showing %>
              <td>上映中</td>
            <% else %> 
              <td>上映終了</td>
            <% end %>
            <td><%= movie.description %></td>
            <td><a href="<%= movie.image_url%>">画像</a>
            <td><%= movie.created_at %></td>
            <td><%= movie.updated_at %></td>
            <td><%= link_to "編集", "/admin/movies/#{movie.id}/edit", method: :get%>/
                <%= link_to "削除", movie, method: :delete,
                                       data: { confirm: "You sure?" } %>
            </td>
          </tr>
          <% end %>
        </table>
    </div>
	</div>
</section>
