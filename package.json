{
  "name": "app",
  "private": true,
  "dependencies": {
    "@rails/actioncable": "^6.0.0",
    "@rails/activestorage": "^6.0.0",
    "@rails/ujs": "^6.0.0",
    "@rails/webpacker": "5.3.0",
    "@techtrain/cli-railway": "^0.1.0-alpha.9",
    "turbolinks": "^5.2.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12"
  },
  "version": "0.1.0",
  "devDependencies": {
    "simple-git-hooks": "^2.4.1",
    "webpack-dev-server": "^3.11.2"
  },
  "scripts": {
    "login:techtrain": "docker-compose exec -T techtrain-railway login",
    "hook:pre-commit": "techtrain-railway hook:pre-commit",
    "hook:update": "simple-git-hooks",
    "prepare": "simple-git-hooks",
    "postinstall": "docker-compose exec -T yarn hook:update && yarn login:techtrain"
  },
  "simple-git-hooks": {
    "pre-commit": "docker-compose exec -T web yarn hook:pre-commit"
  }
